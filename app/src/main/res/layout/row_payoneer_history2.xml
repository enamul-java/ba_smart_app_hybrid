<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="5">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin_5"
            android:elevation="@dimen/margin_10"
            app:cardElevation="@dimen/margin_10"
            card_view:cardUseCompatPadding="true">

            <LinearLayout
                android:id="@+id/lo_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_10"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/tv_nick_name_value"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textsize_base"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/iv_refresh"
                        android:layout_width="@dimen/icon_size_base"
                        android:layout_height="@dimen/icon_size_base"
                        android:layout_marginEnd="@dimen/margin_30"
                        android:background="@drawable/btn_round_border_transparent_edit_icon"
                        android:gravity="right"
                        android:padding="@dimen/padding_5"
                        android:src="@android:drawable/ic_popup_sync" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/customer_id"
                            android:textColor="@color/text_label_color"
                            android:textSize="@dimen/textsize_base" />

                        <TextView
                            android:id="@+id/tv_hisotry_payee_id"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_5"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:padding="5dp"
                            android:singleLine="true"
                            android:text="0.0"
                            android:textColor="@color/black"
                            android:textSize="@dimen/textsize_base" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/amout"
                            android:textColor="@color/text_label_color"
                            android:textSize="@dimen/textsize_base" />

                        <TextView
                            android:id="@+id/tv_hisotry_amount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_5"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:padding="5dp"
                            android:singleLine="true"
                            android:text="0.0"
                            android:textColor="@color/black"
                            android:textSize="@dimen/textsize_base" />

                    </LinearLayout>

                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/usd_amount"
                            android:textColor="@color/text_label_color"
                            android:textSize="@dimen/textsize_base" />

                        <TextView
                            android:id="@+id/tv_hisotry_payee_usd_amount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_5"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:padding="5dp"
                            android:singleLine="true"
                            android:text="0.0"
                            android:textColor="@color/black"
                            android:textSize="@dimen/textsize_base" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/bdt_amount"
                            android:textColor="@color/text_label_color"
                            android:textSize="@dimen/textsize_base" />

                        <TextView
                            android:id="@+id/tv_hisotry_payee_bdt_amount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_5"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:padding="5dp"
                            android:singleLine="true"
                            android:text="0.0"
                            android:textColor="@color/black"
                            android:textSize="@dimen/textsize_base" />
                    </LinearLayout>

                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/rate"
                            android:textColor="@color/text_label_color"
                            android:textSize="@dimen/textsize_base" />

                        <TextView
                            android:id="@+id/tv_hisotry_rate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_5"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:padding="5dp"
                            android:singleLine="true"
                            android:text="0.0"
                            android:textColor="@color/black"
                            android:textSize="@dimen/textsize_base" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/tc"
                            android:textColor="@color/text_label_color"
                            android:textSize="@dimen/textsize_base" />

                        <TextView
                            android:id="@+id/tv_hisotry_tc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_5"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:padding="5dp"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textSize="@dimen/textsize_base" />
                    </LinearLayout>

                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/transaction_date"
                            android:textColor="@color/text_label_color"
                            android:textSize="@dimen/textsize_base" />

                        <TextView
                            android:id="@+id/tv_hisotry_transaction_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_5"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:padding="5dp"
                            android:singleLine="true"
                            android:text="0.0"
                            android:textColor="@color/black"
                            android:textSize="@dimen/textsize_base" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/Transaction_status"
                            android:textColor="@color/text_label_color"
                            android:textSize="@dimen/textsize_base" />

                        <TextView
                            android:id="@+id/tv_hisotry_complete"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_5"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:padding="5dp"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textSize="@dimen/textsize_base" />
                    </LinearLayout>

                </LinearLayout>



            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>