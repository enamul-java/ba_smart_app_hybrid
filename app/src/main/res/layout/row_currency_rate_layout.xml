<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardAcReq"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_2"
        android:layout_marginRight="@dimen/margin_2"
        android:layout_marginTop="@dimen/margin_5"
        android:layout_marginBottom="@dimen/margin_5"
        android:padding="@dimen/padding_5"
        app:cardBackgroundColor="@color/white"
        android:elevation="@dimen/margin_5"
        app:cardCornerRadius="@dimen/margin_5"
        app:cardElevation="@dimen/margin_5"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:id="@+id/lo_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/searchInputLayout"
            android:background="@android:color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivCurrency"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:gravity="center"
                    android:src="@drawable/icon_currency"
                    android:text="@string/currency_rate"
                    android:textColor="@color/app_color"
                    android:textSize="@dimen/textsize_18"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal|center_vertical|left"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_horizontal|center_vertical|left"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvCurrencyName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal|center_vertical|left"
                            android:padding="@dimen/margin_5"
                            android:text="Currency Name"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/textsize_18"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_horizontal|center_vertical|left"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvBdtLabel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal|center_vertical|left"
                            android:padding="@dimen/margin_5"
                            android:text="@string/bdt_price"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/textsize_base" />

                        <TextView
                            android:id="@+id/tvCurrencyAmt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal|center_vertical|left"
                            android:padding="@dimen/margin_5"
                            android:text="BDT"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/textsize_18" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>