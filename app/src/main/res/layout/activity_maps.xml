<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.home.remote.location.map.screen.MapsActivity">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/buttonLayout"
        tools:context=".presentation.home.remote.location.map.screen.MapsActivity"
        map:uiZoomControls="true"
        map:uiRotateGestures="true"
        map:cameraBearing="112.5"
        map:cameraZoom="20"
        map:cameraTilt="30"/>

    <LinearLayout
        android:id="@+id/buttonLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        tools:ignore="MissingConstraints"
        android:background="@color/white"
        android:orientation="horizontal"
        android:weightSum="2">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_walking_directions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_5"
            android:layout_weight="1"
            android:background="@drawable/btn_round_border_transparent_unselect"
            android:gravity="center"
            android:padding="@dimen/padding_10"
            android:text="Walking Direction"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="@dimen/textsize_base" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_driving_directions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_5"
            android:layout_weight="1"
            android:background="@drawable/btn_round_border_transparent_unselect"
            android:gravity="center"
            android:padding="@dimen/padding_10"
            android:text="Driving Direction"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="@dimen/textsize_base" />

    </LinearLayout>


</RelativeLayout>