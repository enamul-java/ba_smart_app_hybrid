<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <LinearLayout
                        android:id="@+id/input_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <androidx.cardview.widget.CardView
                            android:id="@+id/input_source_binimoy_id_cardview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:elevation="@dimen/margin_10"
                            android:visibility="visible"
                            app:cardElevation="@dimen/margin_10">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <com.google.android.material.textfield.TextInputLayout
                                    android:id="@+id/input_source_binimoy_id"
                                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/text_input_layout_left_size"
                                    android:layout_marginTop="@dimen/text_input_layout_top_size"
                                    android:layout_marginEnd="@dimen/text_input_layout_right_size"
                                    android:layout_marginBottom="@dimen/text_input_layout_bottom_size"
                                    android:hint="@string/source_binimoy_id"
                                    android:padding="@dimen/padding_5">

                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/et_source_binimoy_id_value"
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/input_field_height_size"
                                        android:layout_alignParentTop="true"
                                        android:layout_alignParentEnd="true"
                                        android:inputType="none"
                                        android:paddingEnd="@dimen/binimoy_id_padding_right"
                                        android:singleLine="true"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/textsize_base" />

                                </com.google.android.material.textfield.TextInputLayout>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerVertical="true"
                                    android:gravity="center"
                                    android:paddingEnd="@dimen/padding_20"
                                    android:text="@string/binimoy"
                                    android:textAlignment="center"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/textsize_base" />
                            </RelativeLayout>


                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/input_receiving_ac_cardview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:elevation="@dimen/margin_10"
                            android:visibility="visible"
                            app:cardElevation="@dimen/margin_10">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <com.google.android.material.textfield.TextInputLayout
                                    android:id="@+id/input_receiving_ac"
                                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/text_input_layout_left_size"
                                    android:layout_marginTop="@dimen/text_input_layout_top_size"
                                    android:layout_marginEnd="@dimen/text_input_layout_right_size"
                                    android:layout_marginBottom="@dimen/text_input_layout_bottom_size"
                                    android:hint="@string/destination_binimoy_id"
                                    android:padding="@dimen/padding_5">

                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/et_receiving_ac_value"
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/input_field_height_size"
                                        android:layout_alignParentTop="true"
                                        android:layout_alignParentEnd="true"
                                        android:inputType="text"
                                        android:paddingRight="@dimen/binimoy_id_padding_right"
                                        android:singleLine="true"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/textsize_base" />

                                </com.google.android.material.textfield.TextInputLayout>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerVertical="true"
                                    android:gravity="center"
                                    android:paddingRight="@dimen/padding_20"
                                    android:text="@string/binimoy"
                                    android:textAlignment="center"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/textsize_base" />
                            </RelativeLayout>


                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/input_amount_cardview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:elevation="@dimen/margin_10"
                            android:visibility="visible"
                            app:cardElevation="@dimen/margin_10">


                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/amount_input"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginStart="@dimen/text_input_layout_left_size"
                                android:layout_marginTop="@dimen/text_input_layout_top_size"
                                android:layout_marginEnd="@dimen/text_input_layout_right_size"
                                android:layout_marginBottom="@dimen/text_input_layout_bottom_size"
                                android:hint="@string/amount"
                                android:padding="@dimen/padding_5">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/et_amount_value"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/input_field_height_size"
                                    android:inputType="numberDecimal"
                                    android:padding="@dimen/padding_5"
                                    android:singleLine="true"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/textsize_base" />

                            </com.google.android.material.textfield.TextInputLayout>


                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/input_remarks_cardview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:elevation="@dimen/margin_10"
                            android:visibility="visible"
                            app:cardElevation="@dimen/margin_10">


                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/remarks_input"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginStart="@dimen/text_input_layout_left_size"
                                android:layout_marginTop="@dimen/text_input_layout_top_size"
                                android:layout_marginEnd="@dimen/text_input_layout_right_size"
                                android:layout_marginBottom="@dimen/text_input_layout_bottom_size"
                                android:hint="@string/remarks"
                                android:padding="@dimen/padding_5">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/et_remarks_value"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/input_field_height_size"
                                    android:inputType="text"
                                    android:padding="@dimen/padding_5"
                                    android:singleLine="true"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/textsize_base" />

                            </com.google.android.material.textfield.TextInputLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/input_login_password_cardview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:elevation="@dimen/margin_10"
                            android:visibility="visible"
                            app:cardElevation="@dimen/margin_10">


                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/login_password_input"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginStart="@dimen/text_input_layout_left_size"
                                android:layout_marginTop="@dimen/text_input_layout_top_size"
                                android:layout_marginEnd="@dimen/text_input_layout_right_size"
                                android:layout_marginBottom="@dimen/text_input_layout_bottom_size"
                                android:hint="@string/login_password"
                                android:padding="@dimen/padding_5"
                                app:passwordToggleEnabled="true">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/et_login_password_value"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/input_field_height_size"
                                    android:inputType="textPassword"
                                    android:padding="@dimen/padding_5"
                                    android:singleLine="true"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/textsize_base" />

                            </com.google.android.material.textfield.TextInputLayout>

                        </androidx.cardview.widget.CardView>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/input_value"
                        android:orientation="vertical">

                        <include layout="@layout/btn_proceed_layout" />
                    </LinearLayout>

                </LinearLayout>




            </LinearLayout>
        </ScrollView>
    </LinearLayout>


</RelativeLayout>