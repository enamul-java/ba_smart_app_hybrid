<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_download"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="right"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="-35dp"
        android:background="@drawable/icon_download"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_10"
        android:background="@drawable/btn_round_border_transparent_unselect"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TableLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_5"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="@dimen/account_detail_padding_base">

                        <TextView
                            android:id="@+id/tv_hisotry_payee_id_lable"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/payee_id"
                            android:textSize="@dimen/account_balance_label_textsize_base" />

                        <TextView
                            android:id="@+id/tv_hisotry_payee_id"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textSize="@dimen/textsize_base" />

                    </LinearLayout>

                    <View
                        android:layout_width="@dimen/divider_height_base"
                        android:layout_height="match_parent"
                        android:background="@color/stoke_color_account_detail" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_5"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="@dimen/account_detail_padding_base">

                        <TextView
                            android:id="@+id/tv_hisotry_amount_label"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/amout"
                            android:textSize="@dimen/account_balance_label_textsize_base" />

                        <TextView
                            android:id="@+id/tv_hisotry_amount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textSize="@dimen/textsize_base" />
                    </LinearLayout>


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_height_base"
                    android:layout_margin="0dp"
                    android:background="@color/stoke_color_account_detail"
                    android:padding="0dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone"

                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_5"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="@dimen/account_detail_padding_base">

                        <TextView
                            android:id="@+id/tv_bill_no_label"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Bill No"
                            android:textSize="@dimen/account_balance_label_textsize_base" />

                        <TextView
                            android:id="@+id/tv_bill_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/zero"
                            android:textSize="@dimen/textsize_base" />

                    </LinearLayout>

                    <View
                        android:layout_width="@dimen/divider_height_base"
                        android:layout_height="match_parent"
                        android:background="@color/stoke_color_account_detail" />


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_height_base"
                    android:layout_margin="0dp"
                    android:background="@color/stoke_color_account_detail"
                    android:padding="0dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_5"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="@dimen/account_detail_padding_base">

                        <TextView
                            android:id="@+id/tv_hisotry_payee_usd_amount_label"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/usd_amount"
                            android:textSize="@dimen/account_balance_label_textsize_base" />

                        <TextView
                            android:id="@+id/tv_hisotry_payee_usd_amount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textSize="@dimen/textsize_base" />

                    </LinearLayout>

                    <View
                        android:layout_width="@dimen/divider_height_base"
                        android:layout_height="match_parent"
                        android:background="@color/stoke_color_account_detail" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_5"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="@dimen/account_detail_padding_base">

                        <TextView
                            android:id="@+id/tv_hisotry_payee_bdt_amount_label"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/bdt_amount"
                            android:textSize="@dimen/account_balance_label_textsize_base" />

                        <TextView
                            android:id="@+id/tv_hisotry_payee_bdt_amount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textSize="@dimen/textsize_base" />
                    </LinearLayout>


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_height_base"
                    android:layout_margin="0dp"
                    android:background="@color/stoke_color_account_detail"
                    android:padding="0dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_5"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="@dimen/account_detail_padding_base">

                        <TextView
                            android:id="@+id/tv_hisotry_rate_label"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/rate"
                            android:textSize="@dimen/account_balance_label_textsize_base" />

                        <TextView
                            android:id="@+id/tv_hisotry_rate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textSize="@dimen/textsize_base" />

                    </LinearLayout>

                    <View
                        android:layout_width="@dimen/divider_height_base"
                        android:layout_height="match_parent"
                        android:background="@color/stoke_color_account_detail" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_5"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="@dimen/account_detail_padding_base">

                        <TextView
                            android:id="@+id/tv_hisotry_tc_label"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/tc"
                            android:textSize="@dimen/account_balance_label_textsize_base" />

                        <TextView
                            android:id="@+id/tv_hisotry_tc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textSize="@dimen/textsize_base" />
                    </LinearLayout>


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_height_base"
                    android:layout_margin="0dp"
                    android:background="@color/stoke_color_account_detail"
                    android:padding="0dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="@dimen/account_detail_padding_base">

                        <TextView
                            android:id="@+id/tv_hisotry_transaction_date_label"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/transaction_date"
                            android:textSize="@dimen/account_balance_label_textsize_base" />

                        <TextView
                            android:id="@+id/tv_hisotry_transaction_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textSize="@dimen/textsize_base" />

                    </LinearLayout>

                    <View
                        android:layout_width="@dimen/divider_height_base"
                        android:layout_height="match_parent"
                        android:background="@color/stoke_color_account_detail" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_5"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="@dimen/account_detail_padding_base">

                        <TextView
                            android:id="@+id/tv_status_label"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/status"
                            android:textSize="@dimen/account_balance_label_textsize_base" />

                        <TextView
                            android:id="@+id/tv_status"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textSize="@dimen/textsize_base" />
                    </LinearLayout>


                </LinearLayout>

            </TableLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>