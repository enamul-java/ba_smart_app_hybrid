<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/input_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/source_ac_no_balance_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/source_ac_no_balance_layout" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_transper_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10"
            android:gravity="start"
            android:text="@string/transper_type"
            android:textColor="@color/text_label_color"
            android:textSize="@dimen/textsize_base" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/padding_10">

            <LinearLayout
                android:id="@+id/npsb_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_5"
                android:layout_weight="1"
                android:background="@drawable/btn_round_border_transparent_unselect"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/eft_npsb_rths_icon_size_base"
                    android:layout_weight="1"
                    android:padding="@dimen/padding_5"
                    android:src="@drawable/icon_npsb" />

                <TextView
                    android:id="@+id/tv_npsb"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="@string/npsb"
                    android:textColor="@color/unselect_text_color" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/beftn_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_5"
                android:layout_weight="1"
                android:background="@drawable/btn_round_border_transparent_unselect"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/eft_npsb_rths_icon_size_base"
                    android:layout_weight="1"
                    android:padding="@dimen/padding_5"
                    android:src="@drawable/icon_beftn" />

                <TextView
                    android:id="@+id/tv_beftn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="@string/beftn"
                    android:textColor="@color/unselect_text_color" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/rtgs_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/btn_round_border_transparent_unselect"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/eft_npsb_rths_icon_size_base"
                    android:layout_weight="1"
                    android:padding="@dimen/padding_5"
                    android:src="@drawable/icon_rtgs" />

                <TextView
                    android:id="@+id/tv_rtgs"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="@string/rtgs"
                    android:textColor="@color/unselect_text_color" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_beneficiary_management"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:paddingEnd="@dimen/padding_10"
            android:text="@string/beneficiary_management"
            android:textColor="@color/app_color"
            android:textSize="@dimen/textsize_base" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/text_input_layout_left_size"
            android:layout_marginTop="@dimen/text_input_layout_top_size"
            android:layout_marginEnd="@dimen/text_input_layout_right_size"
            android:layout_marginBottom="@dimen/text_input_layout_bottom_size">

            <ImageView
                android:id="@+id/iv_select_beneficiary"
                android:layout_width="@dimen/input_field_height_size"
                android:layout_height="@dimen/input_field_height_size"
                android:layout_gravity="end"
                android:layout_marginTop="@dimen/margin_5"
                android:layout_marginEnd="5dp"
                android:background="@drawable/beneficiary_round_border_transparent"
                android:padding="@dimen/beneficiary_image_padding_base"
                android:src="@drawable/icon_search"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/account_number_input"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/enter_account_no"
                android:padding="@dimen/padding_5"
                tools:layout_editor_absoluteX="4dp"
                tools:layout_editor_absoluteY="0dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_account_number_value"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/input_field_height_size"
                    android:layout_marginEnd="@dimen/beneficiary_icon_margin_right_base"
                    android:clickable="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:inputType="none"
                    android:longClickable="false"
                    android:padding="@dimen/padding_5"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize_base" />

            </com.google.android.material.textfield.TextInputLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:id="@+id/destination_beneficiary_info_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <include layout="@layout/destination_beneficiary_info_layout" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_check_limit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_5"
            android:gravity="end"
            android:paddingEnd="@dimen/padding_10"
            android:text="@string/check_limit"
            android:textColor="@color/app_color"
            android:textSize="@dimen/textsize_base" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/amount_input"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/text_input_layout_left_size"
            android:layout_marginTop="@dimen/text_input_layout_top_size"
            android:layout_marginEnd="@dimen/text_input_layout_right_size"
            android:layout_marginBottom="@dimen/text_input_layout_bottom_size"
            android:hint="@string/amount"
            android:padding="@dimen/padding_5">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_amount_value"
                android:layout_width="match_parent"
                android:layout_height="@dimen/input_field_height_size"
                android:inputType="numberDecimal"
                android:padding="@dimen/padding_5"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize_base" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/remarks_input"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/text_input_layout_left_size"
            android:layout_marginTop="@dimen/text_input_layout_top_size"
            android:layout_marginEnd="@dimen/text_input_layout_right_size"
            android:layout_marginBottom="@dimen/text_input_layout_bottom_size"
            android:hint="@string/enter_remarks"
            android:padding="@dimen/padding_5">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_remarks_value"
                android:layout_width="match_parent"
                android:layout_height="@dimen/input_field_height_size"
                android:digits="@string/input_remarks_text"
                android:inputType="textCapWords"
                android:maxLength="30"
                android:padding="@dimen/padding_5"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize_base" />

        </com.google.android.material.textfield.TextInputLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/input_value"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="vertical">

        <include layout="@layout/btn_proceed_layout" />
    </LinearLayout>


</RelativeLayout>