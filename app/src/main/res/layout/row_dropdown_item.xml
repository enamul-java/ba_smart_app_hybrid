<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/view_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_1"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_bill_type"
            android:layout_width="@dimen/sub_3menu_size"
            android:layout_height="@dimen/sub_3menu_size"
            android:padding="@dimen/padding_5"
            android:src="@drawable/electricity_bill" />

        <TextView
            android:id="@+id/tv_bill_type_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:padding="@dimen/padding_5"
            android:text="@string/mobile_no"
            android:textColor="@color/black"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height_base"
        android:layout_marginLeft="@dimen/confirm_label_padding_base"
        android:layout_marginRight="@dimen/confirm_label_padding_base"
        android:background="@color/confirm_divider_bg_color" />

</LinearLayout>