<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_15"
        android:background="@color/white"
        android:baselineAligned="false"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_15"
            android:layout_marginTop="@dimen/margin_15"
            android:layout_marginRight="@dimen/margin_15"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_transaction_type"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/select_transaction_type"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize_base"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/ivClose"
                android:layout_width="@dimen/icon_size_base"
                android:layout_height="@dimen/icon_size_base"
                android:layout_gravity="end"
                android:contentDescription="@string/close_icon"
                android:gravity="end"
                android:src="@drawable/ic_close" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_15"
            android:layout_marginRight="@dimen/margin_15"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/cash_withdrawal_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_cash_withdrawal"
                    android:layout_width="@dimen/sub_3menu_size"
                    android:layout_height="@dimen/sub_3menu_size"
                    android:padding="@dimen/padding_5"
                    android:src="@drawable/icon_qr_micro_merchant" />

                <TextView
                    android:id="@+id/tv_cash_withdrawal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:padding="@dimen/padding_5"
                    android:text="@string/cash_withdrawal"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_height_base"
                android:layout_marginLeft="@dimen/confirm_label_padding_base"
                android:layout_marginRight="@dimen/confirm_label_padding_base"
                android:background="@color/confirm_divider_bg_color" />

            <LinearLayout
                android:id="@+id/purchase_payment_name_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_purchase_payment_name"
                    android:layout_width="@dimen/sub_3menu_size"
                    android:layout_height="@dimen/sub_3menu_size"
                    android:padding="@dimen/padding_5"
                    android:src="@drawable/icon_qr_micro_merchant" />

                <TextView
                    android:id="@+id/tv_purchase_payment_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:padding="@dimen/padding_5"
                    android:text="@string/purchase_payment"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_height_base"
                android:layout_marginLeft="@dimen/confirm_label_padding_base"
                android:layout_marginRight="@dimen/confirm_label_padding_base"
                android:background="@color/confirm_divider_bg_color" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>
