<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/input_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



        <ImageView
            android:id="@+id/iv_shohoz_icon"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin_10"
            android:src="@drawable/icon_shohoz_png" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/cardview_background_shadow"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                app:cardElevation="@dimen/margin_5"
                app:cardUseCompatPadding="true"
                app:elevation="0dp"
                card_view:cardUseCompatPadding="true">

                <LinearLayout
                    android:id="@+id/ac_no_balance_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/linear_layout_round_confirm"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="@dimen/padding_10">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/confirm_label_margin_base"
                                android:layout_weight="2"
                                android:orientation="horizontal"
                                android:padding="@dimen/confirm_label_padding_base">

                                <TextView
                                    android:id="@+id/tv_shohoz_info_request_date_label"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="@string/request_date"
                                    android:textColor="@color/confirm_lebel_text_color"
                                    android:textSize="@dimen/textsize_base" />

                                <TextView
                                    android:id="@+id/tv_shohoz_info_request_date_value"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="end"
                                    android:textColor="@color/confirm_value_text_color"
                                    android:textSize="@dimen/textsize_base" />

                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/divider_height_base"
                                android:layout_marginLeft="@dimen/confirm_label_padding_base"
                                android:layout_marginRight="@dimen/confirm_label_padding_base"
                                android:background="@color/confirm_divider_bg_color" />


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/confirm_label_margin_base"
                                android:layout_weight="2"
                                android:orientation="horizontal"
                                android:padding="@dimen/confirm_label_padding_base">

                                <TextView
                                    android:id="@+id/tv_shohoz_info_bus_name_label"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:text="@string/bus_name"
                                    android:textColor="@color/confirm_lebel_text_color"
                                    android:textSize="@dimen/textsize_base" />

                                <TextView
                                    android:id="@+id/tv_shohoz_info_bus_name_value"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="end"
                                    android:textColor="@color/confirm_value_text_color"
                                    android:textSize="@dimen/textsize_base" />

                            </LinearLayout>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/divider_height_base"
                                android:layout_marginLeft="@dimen/confirm_label_padding_base"
                                android:layout_marginRight="@dimen/confirm_label_padding_base"
                                android:background="@color/confirm_divider_bg_color" />


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/confirm_label_margin_base"
                                android:layout_weight="2"
                                android:orientation="horizontal"
                                android:padding="@dimen/confirm_label_padding_base">

                                <TextView
                                    android:id="@+id/tv_shohoz_info_unit_price_label"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:text="@string/ticket_price"
                                    android:textColor="@color/confirm_lebel_text_color"
                                    android:textSize="@dimen/textsize_base" />

                                <TextView
                                    android:id="@+id/tv_shohoz_info_unit_price_value"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="end"
                                    android:textColor="@color/confirm_value_text_color"
                                    android:textSize="@dimen/textsize_base" />

                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/divider_height_base"
                                android:layout_marginLeft="@dimen/confirm_label_padding_base"
                                android:layout_marginRight="@dimen/confirm_label_padding_base"
                                android:background="@color/confirm_divider_bg_color" />


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/confirm_label_margin_base"
                                android:layout_weight="2"
                                android:orientation="horizontal"
                                android:padding="@dimen/confirm_label_padding_base">

                                <TextView
                                    android:id="@+id/tv_shohoz_info_quantity_label"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="@string/shohoz_quantity"
                                    android:textColor="@color/confirm_lebel_text_color"
                                    android:textSize="@dimen/textsize_base" />

                                <TextView
                                    android:id="@+id/tv_shohoz_info_quantity_value"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="end"
                                    android:textColor="@color/confirm_value_text_color"
                                    android:textSize="@dimen/textsize_base" />

                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/divider_height_base"
                                android:layout_marginLeft="@dimen/confirm_label_padding_base"
                                android:layout_marginRight="@dimen/confirm_label_padding_base"
                                android:background="@color/confirm_divider_bg_color" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/confirm_label_margin_base"
                                android:layout_weight="2"
                                android:orientation="horizontal"
                                android:padding="@dimen/confirm_label_padding_base">

                                <TextView
                                    android:id="@+id/tv_shohoz_info_amount_label"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="@string/amount"
                                    android:textColor="@color/confirm_lebel_text_color"
                                    android:textSize="@dimen/textsize_base" />

                                <TextView
                                    android:id="@+id/tv_shohoz_info_amount_value"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="end"
                                    android:text="@string/zero"
                                    android:textColor="@color/confirm_value_text_color"
                                    android:textSize="@dimen/textsize_base" />

                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/divider_height_base"
                                android:layout_marginLeft="@dimen/confirm_label_padding_base"
                                android:layout_marginRight="@dimen/confirm_label_padding_base"
                                android:background="@color/confirm_divider_bg_color" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/confirm_label_margin_base"
                                android:layout_weight="2"
                                android:orientation="horizontal"
                                android:padding="@dimen/confirm_label_padding_base">

                                <TextView
                                    android:id="@+id/tv_shohoz_info_commission_label"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="@string/comission"
                                    android:textColor="@color/confirm_lebel_text_color"
                                    android:textSize="@dimen/textsize_base" />

                                <TextView
                                    android:id="@+id/tv_shohoz_info_commission_value"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="end"
                                    android:text="@string/zero"
                                    android:textColor="@color/confirm_value_text_color"
                                    android:textSize="@dimen/textsize_base" />

                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/divider_height_base"
                                android:layout_marginLeft="@dimen/confirm_label_padding_base"
                                android:layout_marginRight="@dimen/confirm_label_padding_base"
                                android:background="@color/confirm_divider_bg_color" />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/confirm_label_margin_base"
                                android:layout_weight="2"
                                android:orientation="horizontal"
                                android:padding="@dimen/confirm_label_padding_base">

                                <TextView
                                    android:id="@+id/tv_shohoz_info_total_amount_label"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="@string/total_amount"
                                    android:textColor="@color/confirm_lebel_text_color"
                                    android:textSize="@dimen/textsize_base" />

                                <TextView
                                    android:id="@+id/tv_shohoz_info_total_amount_value"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="end"
                                    android:text="@string/zero"
                                    android:textColor="@color/confirm_value_text_color"
                                    android:textSize="@dimen/textsize_base" />

                            </LinearLayout>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/divider_height_base"
                                android:layout_marginLeft="@dimen/confirm_label_padding_base"
                                android:layout_marginRight="@dimen/confirm_label_padding_base"
                                android:background="@color/confirm_divider_bg_color" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/confirm_label_margin_base"
                                android:layout_weight="2"
                                android:orientation="horizontal"
                                android:padding="@dimen/confirm_label_padding_base">

                                <TextView
                                    android:id="@+id/tv_shohoz_info_details_label"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="@string/details"
                                    android:textColor="@color/confirm_lebel_text_color"
                                    android:textSize="@dimen/textsize_base" />

                               <Button
                                   android:id="@+id/btnInfoAmoutDetails"
                                   android:layout_width="220dp"
                                   android:layout_height="40dp"
                                   android:layout_weight="1"
                                   android:text="@string/details"
                                   android:textSize="@dimen/textsize_base"/>

                            </LinearLayout>
                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/source_ac_no_balance_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/source_ac_no_balance_layout" />
        </LinearLayout>







        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/remarks_input"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/text_input_layout_left_size"
            android:layout_marginTop="@dimen/text_input_layout_top_size"
            android:layout_marginEnd="@dimen/text_input_layout_right_size"
            android:layout_marginBottom="@dimen/text_input_layout_bottom_size"
            android:hint="@string/enter_remarks"
            android:padding="@dimen/padding_5">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_remarks_value"
                android:layout_width="match_parent"
                android:layout_height="@dimen/input_field_height_size"
                android:inputType="text"
                android:padding="@dimen/padding_5"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize_base" />

        </com.google.android.material.textfield.TextInputLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/input_value"
        android:orientation="vertical">

        <include layout="@layout/btn_proceed_layout" />
    </LinearLayout>


</RelativeLayout>