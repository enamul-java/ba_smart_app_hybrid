<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_5"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_select_acc_level"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingLeft="@dimen/input_padding_letf_base"
                android:text="@string/select_account_no"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize_base"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/ivClose"
                android:layout_width="@dimen/dialog_close_icon_size"
                android:layout_height="@dimen/dialog_close_icon_size"
                android:layout_gravity="end"
                android:src="@drawable/ic_close" />
        </LinearLayout>


        <EditText
            android:id="@+id/inputSearchAcc"
            android:layout_width="match_parent"
            android:layout_height="@dimen/input_field_height_size"
            android:layout_marginTop="@dimen/margin_10"
            android:drawableLeft="@drawable/icon_search"
            android:drawablePadding="@dimen/padding_5"
            android:hint="@string/ac_own_view_bene_hints"
            android:inputType="text"
            android:paddingLeft="@dimen/input_padding_letf_base"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="@dimen/textsize_base" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/own_bank_acc_RecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:scrollbars="vertical"
            android:visibility="visible" />

    </LinearLayout>


</LinearLayout>