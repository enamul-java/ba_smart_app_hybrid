<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margin_half"
            app:cardUseCompatPadding="false"
            app:elevation="0dp"
            card_view:cardUseCompatPadding="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/menu_icon"
                    android:layout_width="@dimen/sub_menu_size"
                    android:layout_height="@dimen/sub_menu_size"
                    android:padding="@dimen/padding_15"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/menu_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:completionThreshold="1"
                    android:ellipsize="end"
                    android:gravity="center|center_vertical"
                    android:padding="@dimen/padding_5"
                    android:singleLine="true"
                    android:text="@string/menu_name"
                    android:textColor="@color/black"
                    android:textSize="@dimen/row_welcome_menu_tv2_size_base"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/menu_icon" />

                <TextView
                    android:id="@+id/menu_soft_code"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/meter_no"
                    android:textSize="@dimen/row_welcome_menu_tv2_size_base"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="@+id/menu_icon" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>


</LinearLayout>