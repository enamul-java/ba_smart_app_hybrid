<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_download"
        android:layout_width="@dimen/icon_size_base"
        android:layout_height="@dimen/icon_size_base"
        android:layout_gravity="right"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="-25dp"
        android:background="@drawable/icon_download"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:visibility="invisible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_10"
        android:background="@drawable/btn_round_border_transparent_unselect"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TableLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_5"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="@dimen/account_detail_padding_base">

                        <TextView
                            android:id="@+id/tv_transaction_id_label"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Order ID"
                            android:textSize="@dimen/account_balance_label_textsize_base" />

                        <TextView
                            android:id="@+id/tv_order_id"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textSize="@dimen/textsize_base" />


                    </LinearLayout>

                    <View
                        android:layout_width="@dimen/divider_height_base"
                        android:layout_height="match_parent"
                        android:background="@color/stoke_color_account_detail" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_5"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="@dimen/account_detail_padding_base">

                        <TextView
                            android:id="@+id/tv_purchase_date_label"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Purchase Date"
                            android:textSize="@dimen/account_balance_label_textsize_base" />

                        <TextView
                            android:id="@+id/tv_purchase_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textSize="@dimen/textsize_base" />
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lo_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <View
                        android:id="@+id/view"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/divider_height_base"
                        android:layout_margin="0dp"
                        android:background="@color/stoke_color_account_detail"
                        android:padding="0dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"

                        android:weightSum="2">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_5"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:padding="@dimen/account_detail_padding_base">

                            <TextView
                                android:id="@+id/tv_message"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="Incomplete Ticket Purchase"
                                android:textColor="@color/red"
                                android:textSize="@dimen/account_balance_label_textsize_base" />

                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lo_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/divider_height_base"
                        android:layout_margin="0dp"
                        android:background="@color/stoke_color_account_detail"
                        android:padding="0dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone"

                        android:weightSum="2">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_5"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:padding="@dimen/account_detail_padding_base">

                            <TextView
                                android:id="@+id/tv_bill_no_label"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="Bill No"
                                android:textSize="@dimen/account_balance_label_textsize_base" />

                            <TextView
                                android:id="@+id/tv_bill_date"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="@string/zero"
                                android:textSize="@dimen/textsize_base" />

                        </LinearLayout>

                        <View
                            android:layout_width="@dimen/divider_height_base"
                            android:layout_height="match_parent"
                            android:background="@color/stoke_color_account_detail" />


                    </LinearLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/divider_height_base"
                        android:layout_margin="0dp"
                        android:background="@color/stoke_color_account_detail"
                        android:padding="0dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"

                        android:weightSum="2">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_5"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:padding="@dimen/account_detail_padding_base">

                            <TextView
                                android:id="@+id/tv_bus_name_label"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="Bus Name"
                                android:textSize="@dimen/account_balance_label_textsize_base" />

                            <TextView
                                android:id="@+id/tv_bus_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:textColor="@color/black"
                                android:textSize="@dimen/textsize_base" />

                        </LinearLayout>

                        <View
                            android:layout_width="@dimen/divider_height_base"
                            android:layout_height="match_parent"
                            android:background="@color/stoke_color_account_detail" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_5"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:padding="@dimen/account_detail_padding_base">

                            <TextView
                                android:id="@+id/tv_seat_no_label"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="Seat No"
                                android:textSize="@dimen/account_balance_label_textsize_base" />

                            <TextView
                                android:id="@+id/tv_seat_no"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:textColor="@color/black"
                                android:textSize="@dimen/textsize_base" />
                        </LinearLayout>


                    </LinearLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/divider_height_base"
                        android:layout_margin="0dp"
                        android:background="@color/stoke_color_account_detail"
                        android:padding="0dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"

                        android:weightSum="2">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_5"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:padding="@dimen/account_detail_padding_base">

                            <TextView
                                android:id="@+id/tv_journey_from_label"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="Journey Form"
                                android:textSize="@dimen/account_balance_label_textsize_base" />

                            <TextView
                                android:id="@+id/tv_journey_from"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:textColor="@color/black"
                                android:textSize="@dimen/textsize_base" />

                        </LinearLayout>

                        <View
                            android:layout_width="@dimen/divider_height_base"
                            android:layout_height="match_parent"
                            android:background="@color/stoke_color_account_detail" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_5"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:padding="@dimen/account_detail_padding_base">

                            <TextView
                                android:id="@+id/tv_journey_to_label"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="Journey To"
                                android:textSize="@dimen/account_balance_label_textsize_base" />

                            <TextView
                                android:id="@+id/tv_journey_to"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:textColor="@color/black"
                                android:textSize="@dimen/textsize_base" />
                        </LinearLayout>


                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/divider_height_base"
                        android:layout_margin="0dp"
                        android:background="@color/stoke_color_account_detail"
                        android:padding="0dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"

                        android:weightSum="2">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_5"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:padding="@dimen/account_detail_padding_base">

                            <TextView
                                android:id="@+id/tv_journey_date_label"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="Journey Date"
                                android:textSize="@dimen/account_balance_label_textsize_base" />

                            <TextView
                                android:id="@+id/tv_journey_date"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:textColor="@color/black"
                                android:textSize="@dimen/textsize_base" />

                        </LinearLayout>

                        <View
                            android:layout_width="@dimen/divider_height_base"
                            android:layout_height="match_parent"
                            android:background="@color/stoke_color_account_detail" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_5"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:padding="@dimen/account_detail_padding_base">

                            <TextView
                                android:id="@+id/tv_contact_no_label"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="Contact No"
                                android:textSize="@dimen/account_balance_label_textsize_base" />

                            <TextView
                                android:id="@+id/tv_contact_no"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:textColor="@color/black"
                                android:textSize="@dimen/textsize_base" />
                        </LinearLayout>


                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/divider_height_base"
                        android:layout_margin="0dp"
                        android:background="@color/stoke_color_account_detail"
                        android:padding="0dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"

                        android:weightSum="2">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_5"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:padding="@dimen/account_detail_padding_base">

                            <TextView
                                android:id="@+id/tv_boarding_point_label"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="Boarding Point"
                                android:textSize="@dimen/account_balance_label_textsize_base" />

                            <TextView
                                android:id="@+id/tv_boarding_point"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:textColor="@color/black"
                                android:textSize="@dimen/textsize_base" />

                        </LinearLayout>

                        <View
                            android:layout_width="@dimen/divider_height_base"
                            android:layout_height="match_parent"
                            android:background="@color/stoke_color_account_detail" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_5"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:padding="@dimen/account_detail_padding_base">

                            <TextView
                                android:id="@+id/tv_reporting_time_label"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="Reporting Time"
                                android:textSize="@dimen/account_balance_label_textsize_base" />

                            <TextView
                                android:id="@+id/tv_reporting_time"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:textColor="@color/black"
                                android:textSize="@dimen/textsize_base" />

                        </LinearLayout>


                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/divider_height_base"
                        android:layout_margin="0dp"
                        android:background="@color/stoke_color_account_detail"
                        android:padding="0dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"

                        android:weightSum="2">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:padding="@dimen/account_detail_padding_base">

                            <TextView
                                android:id="@+id/tv_amount_label"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="Ticket Price"
                                android:textSize="@dimen/account_balance_label_textsize_base" />

                            <TextView
                                android:id="@+id/tv_amount"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:textColor="@color/black"
                                android:textSize="@dimen/textsize_base" />

                        </LinearLayout>

                        <View
                            android:layout_width="@dimen/divider_height_base"
                            android:layout_height="match_parent"
                            android:background="@color/stoke_color_account_detail" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/margin_5"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:padding="@dimen/account_detail_padding_base">

                            <TextView
                                android:id="@+id/tv_total_amount_label"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="Total Amount"
                                android:textSize="@dimen/account_balance_label_textsize_base" />

                            <TextView
                                android:id="@+id/tv_total_amount"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:textColor="@color/black"
                                android:textSize="@dimen/textsize_base" />
                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/divider_height_base"
                        android:layout_margin="0dp"
                        android:background="@color/stoke_color_account_detail"
                        android:padding="0dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"

                        android:weightSum="2">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:padding="@dimen/account_detail_padding_base">

                            <TextView
                                android:id="@+id/tv_pnr_label"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="PNR"
                                android:textSize="@dimen/account_balance_label_textsize_base" />

                            <TextView
                                android:id="@+id/tv_pnr"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:textColor="@color/black"
                                android:textSize="@dimen/textsize_base" />

                        </LinearLayout>

                        <View
                            android:layout_width="@dimen/divider_height_base"
                            android:layout_height="match_parent"
                            android:background="@color/stoke_color_account_detail" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/margin_5"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:padding="@dimen/account_detail_padding_base">

                            <TextView
                                android:id="@+id/tv_status_label"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="@string/status"
                                android:textSize="@dimen/account_balance_label_textsize_base" />

                            <TextView
                                android:id="@+id/tv_status"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:textColor="@color/black"
                                android:textSize="@dimen/textsize_base" />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

            </TableLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/lo_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_height_base"
                android:layout_margin="0dp"
                android:background="@color/stoke_color_account_detail"
                android:padding="0dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_horizontal|center_vertical|right"
                android:orientation="horizontal"
                android:weightSum="3">

                <Button
                    android:id="@+id/btn_cancel_withdraw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/red_button_background"
                    android:text="Cancel" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>