<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_marginLeft="@dimen/margin_15"
    android:layout_marginRight="@dimen/margin_15"
    android:gravity="center"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/qr_layout_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/padding_10">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/qr_dailog_round"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="1">


                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="60dp"
                            android:layout_margin="@dimen/margin_5"
                            android:padding="5dp"
                            android:src="@drawable/bank_asia_limited" />
                    </LinearLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/divider_height_base"
                        android:layout_margin="0dp"
                        android:background="@color/app_color"
                        android:padding="0dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_10"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <TextView
                                android:id="@+id/tv_account_title_label"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.3"
                                android:gravity="left"
                                android:text="@string/account_title"
                                android:textColor="@color/black"
                                android:textSize="@dimen/textsize_base" />

                            <View
                                android:layout_width="@dimen/divider_height_base"
                                android:layout_height="match_parent"
                                android:background="@color/app_color" />

                            <TextView
                                android:id="@+id/tv_account_title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/margin_5"
                                android:layout_weight=".7"
                                android:gravity="left"
                                android:text="@string/account_title"
                                android:textColor="@color/black"
                                android:textSize="@dimen/account_balance_label_textsize_base" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <TextView
                                android:id="@+id/tv_account_no_label"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.3"
                                android:gravity="left"
                                android:text="@string/account_no"
                                android:textColor="@color/black"
                                android:textSize="@dimen/textsize_base" />

                            <View
                                android:layout_width="@dimen/divider_height_base"
                                android:layout_height="match_parent"
                                android:background="@color/app_color" />

                            <TextView
                                android:id="@+id/tv_account_no"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/margin_5"
                                android:layout_weight=".7"
                                android:gravity="left"
                                android:text="@string/account_no"
                                android:textColor="@color/black"
                                android:textSize="@dimen/account_balance_label_textsize_base" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/amount_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <TextView
                                android:id="@+id/tv_amount_label"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.3"
                                android:gravity="left"
                                android:text="@string/amount_bdt"
                                android:textColor="@color/black"
                                android:textSize="@dimen/textsize_base" />

                            <View
                                android:layout_width="@dimen/divider_height_base"
                                android:layout_height="match_parent"
                                android:background="@color/app_color" />

                            <TextView
                                android:id="@+id/tv_amount"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/margin_5"
                                android:layout_weight=".7"
                                android:gravity="left"
                                android:text="@string/amount_500"
                                android:textColor="@color/black"
                                android:textSize="@dimen/textsize_base" />
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/divider_height_base"
                        android:layout_margin="0dp"
                        android:background="@color/app_color"
                        android:padding="0dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingLeft="10dp"
                        android:weightSum="2">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="@dimen/margin_5"
                            android:text="@string/own_bank_qr_message"
                            android:textColor="@color/black"
                            android:textSize="@dimen/textsize_base"
                            android:textStyle="bold" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/iv_qr"
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            android:padding="5dp"
                            android:src="@drawable/icon_qr" />

                    </LinearLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/divider_height_base"
                        android:layout_margin="0dp"
                        android:background="@color/app_color"
                        android:padding="0dp" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <ImageView
                            android:id="@+id/iv_bill_logo"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:padding="5dp"
                            android:src="@drawable/icon_qr_bank_asia" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/margin_10"
                            android:layout_marginBottom="@dimen/margin_10"
                            android:background="@color/black" />

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:padding="5dp"
                            android:src="@drawable/bank_asia_icon_color" />
                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="2">

                <Button
                    android:id="@+id/btn_share_qr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/btn_background"
                    android:text="@string/share_qr"
                    android:textAllCaps="false"
                    android:textColor="@color/button_text_color"
                    android:textSize="@dimen/button_textsize_base" />

                <Button
                    android:id="@+id/btn_qr_cancel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/btn_background"
                    android:text="@string/cancel"
                    android:textAllCaps="false"
                    android:textColor="@color/button_text_color"
                    android:textSize="@dimen/button_textsize_base" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>