<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="@dimen/margin_20"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_10"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_marginEnd="@dimen/margin_10"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_trns_details_level"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/input_padding_letf_base"
                android:text="@string/details"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize_base"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/ivClose"
                android:layout_width="@dimen/dialog_close_icon_size"
                android:layout_height="@dimen/dialog_close_icon_size"
                android:layout_gravity="end"
                android:src="@drawable/ic_close" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_height_base"
                android:layout_marginLeft="@dimen/confirm_label_padding_base"
                android:layout_marginRight="@dimen/confirm_label_padding_base"
                android:background="@color/confirm_divider_bg_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/margin_5">

                <TextView
                    android:id="@+id/tv_source_account_no_label"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/input_padding_letf_base"
                    android:text="@string/source_account_no"
                    android:textSize="@dimen/textsize_base" />

                <TextView
                    android:id="@+id/tv_source_account_no"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:paddingEnd="@dimen/input_padding_letf_base"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize_base" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_height_base"
                android:layout_marginLeft="@dimen/confirm_label_padding_base"
                android:layout_marginRight="@dimen/confirm_label_padding_base"
                android:background="@color/confirm_divider_bg_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/margin_5">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/input_padding_letf_base"
                    android:text="@string/debit_amount"
                    android:textSize="@dimen/textsize_base" />

                <TextView
                    android:id="@+id/tv_debit_amount"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:paddingEnd="@dimen/input_padding_letf_base"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize_base" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_height_base"
                android:layout_marginLeft="@dimen/confirm_label_padding_base"
                android:layout_marginRight="@dimen/confirm_label_padding_base"
                android:background="@color/confirm_divider_bg_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/margin_5">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/input_padding_letf_base"
                    android:text="@string/credit_amount"
                    android:textSize="@dimen/textsize_base" />

                <TextView
                    android:id="@+id/tv_credit_amount"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:paddingEnd="@dimen/input_padding_letf_base"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize_base" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_height_base"
                android:layout_marginLeft="@dimen/confirm_label_padding_base"
                android:layout_marginRight="@dimen/confirm_label_padding_base"
                android:background="@color/confirm_divider_bg_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/margin_5">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/input_padding_letf_base"
                    android:text="@string/date"
                    android:textSize="@dimen/textsize_base" />

                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:paddingEnd="@dimen/input_padding_letf_base"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize_base" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_height_base"
                android:layout_marginLeft="@dimen/confirm_label_padding_base"
                android:layout_marginRight="@dimen/confirm_label_padding_base"
                android:background="@color/confirm_divider_bg_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/margin_5">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/input_padding_letf_base"
                    android:text="@string/balance"
                    android:textSize="@dimen/textsize_base" />

                <TextView
                    android:id="@+id/tv_balance"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:paddingEnd="@dimen/input_padding_letf_base"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize_base" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_height_base"
                android:layout_marginLeft="@dimen/confirm_label_padding_base"
                android:layout_marginRight="@dimen/confirm_label_padding_base"
                android:background="@color/confirm_divider_bg_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/margin_5">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/input_padding_letf_base"
                    android:text="@string/reference"
                    android:textSize="@dimen/textsize_base" />

                <TextView
                    android:id="@+id/tv_reference"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:paddingEnd="@dimen/input_padding_letf_base"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize_base" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_height_base"
                android:layout_marginLeft="@dimen/confirm_label_padding_base"
                android:layout_marginRight="@dimen/confirm_label_padding_base"
                android:background="@color/confirm_divider_bg_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/margin_5">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/input_padding_letf_base"
                    android:text="@string/particulars"
                    android:textSize="@dimen/textsize_base" />

                <TextView
                    android:id="@+id/tv_particulars"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:paddingEnd="@dimen/input_padding_letf_base"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize_base" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>