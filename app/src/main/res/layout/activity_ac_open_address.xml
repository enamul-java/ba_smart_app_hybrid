<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:fillViewport="true"
android:fitsSystemWindows="true"
android:orientation="vertical"
tools:context=".presentation.home.remote.ac_open.view.AcOpenAddressActivity">

<LinearLayout
    android:id="@+id/toolbar_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:visibility="visible">

    <include layout="@layout/header_layout_toolbar" />
</LinearLayout>


<LinearLayout
    android:id="@+id/layout_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/toolbar_layout"

    android:orientation="vertical">

    <ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:fillViewport="true"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clipChildren="false"
                        android:orientation="vertical">


                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/lyt_division_dropdown"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/text_input_layout_left_size"
                            android:layout_marginTop="@dimen/text_input_layout_top_size"
                            android:layout_marginEnd="@dimen/text_input_layout_right_size"
                            android:layout_marginBottom="@dimen/text_input_layout_bottom_size"
                            android:hint="@string/division"
                            android:padding="@dimen/padding_5"
                            app:boxStrokeColor="@color/app_color"
                            app:boxStrokeErrorColor="@color/app_color">

                            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                                android:id="@+id/edt_division_dropdown"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/input_field_height_size"
                                android:clickable="false"
                                android:inputType="none"
                                android:longClickable="false"
                                android:paddingStart="@dimen/padding_15"
                                android:paddingTop="@dimen/padding_5"
                                android:paddingEnd="@dimen/padding_10"
                                android:paddingBottom="@dimen/padding_5"
                                android:singleLine="true"
                                android:textColor="@color/black"
                                android:textSize="@dimen/textsize_18" />

                        </com.google.android.material.textfield.TextInputLayout>



                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clipChildren="false"
                        android:orientation="vertical">

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/lyt_district_dropdown"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                            android:layout_marginStart="@dimen/text_input_layout_left_size"
                            android:layout_marginTop="@dimen/text_input_layout_top_size"
                            android:layout_marginEnd="@dimen/text_input_layout_right_size"
                            android:layout_marginBottom="@dimen/text_input_layout_bottom_size"
                            android:hint="@string/district"
                            android:padding="@dimen/padding_5"
                            app:boxStrokeColor="@color/app_color"
                            app:boxStrokeErrorColor="@color/app_color">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/edt_district_dropdown"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/input_field_height_size"
                                android:clickable="true"
                                android:inputType="none"
                                android:longClickable="false"
                                android:paddingStart="@dimen/padding_15"
                                android:paddingTop="@dimen/padding_5"
                                android:paddingEnd="@dimen/padding_10"
                                android:paddingBottom="@dimen/padding_5"
                                android:singleLine="true"
                                android:textSize="@dimen/textsize_18"
                                android:textColor="@color/black"
                                android:focusable="false"
                                android:editable="false"
                                android:drawableRight="@drawable/icon_dropdown"
                                android:drawableTint="@color/gray"/>

                        </com.google.android.material.textfield.TextInputLayout>


                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/lyt_district_dropdown_old"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/text_input_layout_left_size"
                            android:layout_marginTop="@dimen/text_input_layout_top_size"
                            android:layout_marginEnd="@dimen/text_input_layout_right_size"
                            android:layout_marginBottom="@dimen/text_input_layout_bottom_size"
                            android:hint="@string/district"
                            android:padding="@dimen/padding_5"
                            app:boxStrokeColor="@color/app_color"
                            app:boxStrokeErrorColor="@color/app_color"
                            android:visibility="gone">

                            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                                android:id="@+id/edt_district_dropdown_old"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/input_field_height_size"
                                android:clickable="false"
                                android:inputType="none"
                                android:longClickable="false"
                                android:paddingStart="@dimen/padding_15"
                                android:paddingTop="@dimen/padding_5"
                                android:paddingEnd="@dimen/padding_10"
                                android:paddingBottom="@dimen/padding_5"
                                android:singleLine="true"
                                android:textColor="@color/black"
                                android:visibility="gone"
                                android:textSize="@dimen/textsize_18" />

                        </com.google.android.material.textfield.TextInputLayout>



                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clipChildren="false"
                        android:orientation="vertical">


                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/lyt_upazilla_dropdown"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/text_input_layout_left_size"
                            android:layout_marginTop="@dimen/text_input_layout_top_size"
                            android:layout_marginEnd="@dimen/text_input_layout_right_size"
                            android:layout_marginBottom="@dimen/text_input_layout_bottom_size"
                            android:hint="@string/upazilla"
                            android:padding="@dimen/padding_5"
                            app:boxStrokeColor="@color/app_color"
                            app:boxStrokeErrorColor="@color/app_color">

                            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                                android:id="@+id/edt_upazilla_dropdown"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/input_field_height_size"
                                android:clickable="false"
                                android:inputType="none"
                                android:longClickable="false"
                                android:paddingStart="@dimen/padding_15"
                                android:paddingTop="@dimen/padding_5"
                                android:paddingEnd="@dimen/padding_10"
                                android:paddingBottom="@dimen/padding_5"
                                android:singleLine="true"
                                android:textColor="@color/black"
                                android:textSize="@dimen/textsize_18" />

                        </com.google.android.material.textfield.TextInputLayout>



                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clipChildren="false"
                        android:orientation="vertical">


                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/lyt_union_dropdown"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/text_input_layout_left_size"
                            android:layout_marginTop="@dimen/text_input_layout_top_size"
                            android:layout_marginEnd="@dimen/text_input_layout_right_size"
                            android:layout_marginBottom="@dimen/text_input_layout_bottom_size"
                            android:hint="@string/union"
                            android:padding="@dimen/padding_5"
                            app:boxStrokeColor="@color/app_color"
                            app:boxStrokeErrorColor="@color/app_color">

                            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                                android:id="@+id/edt_union_dropdown"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/input_field_height_size"
                                android:clickable="false"
                                android:inputType="none"
                                android:longClickable="false"
                                android:paddingStart="@dimen/padding_15"
                                android:paddingTop="@dimen/padding_5"
                                android:paddingEnd="@dimen/padding_10"
                                android:paddingBottom="@dimen/padding_5"
                                android:singleLine="true"
                                android:textColor="@color/black"
                                android:textSize="@dimen/textsize_18" />

                        </com.google.android.material.textfield.TextInputLayout>



                    </RelativeLayout>




                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/lyt_village"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/text_input_layout_left_size"
                        android:layout_marginTop="@dimen/text_input_layout_top_size"
                        android:layout_marginEnd="@dimen/text_input_layout_right_size"
                        android:layout_marginBottom="@dimen/text_input_layout_bottom_size"
                        android:hint="@string/village"
                        android:padding="@dimen/padding_5"
                        app:boxStrokeColor="@color/app_color"
                        app:boxStrokeErrorColor="@color/app_color">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edt_village"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/input_field_height_size"
                            android:inputType="text"
                            android:maxLength="19"
                            android:padding="@dimen/padding_5"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textSize="@dimen/textsize_18" />

                    </com.google.android.material.textfield.TextInputLayout>




                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/lyt_road_no"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/text_input_layout_left_size"
                        android:layout_marginTop="@dimen/text_input_layout_top_size"
                        android:layout_marginEnd="@dimen/text_input_layout_right_size"
                        android:layout_marginBottom="@dimen/text_input_layout_bottom_size"
                        android:hint="@string/road_no"
                        android:padding="@dimen/padding_5"
                        app:boxStrokeColor="@color/app_color"
                        app:boxStrokeErrorColor="@color/app_color">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edt_road_no"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/input_field_height_size"
                            android:inputType="text"
                            android:maxLength="19"
                            android:padding="@dimen/padding_5"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textSize="@dimen/textsize_18" />

                    </com.google.android.material.textfield.TextInputLayout>



                </LinearLayout>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <include layout="@layout/btn_next_layout" />
                </LinearLayout>


            </LinearLayout>



        </LinearLayout>

    </ScrollView>

</LinearLayout>


</RelativeLayout>