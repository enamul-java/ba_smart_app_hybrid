<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardAcReq"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_2"
        android:padding="@dimen/margin_5"
        app:cardCornerRadius="@dimen/login_card_corner_radius_base">

        <LinearLayout
            android:id="@+id/lo_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/searchInputLayout"
            android:layout_marginStart="@dimen/margin_10"
            android:layout_marginEnd="@dimen/margin_10"
            android:background="@android:color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_5"
                    android:layout_marginBottom="@dimen/margin_5"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_5">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_bankicon"
                            android:layout_width="@dimen/icon_size_base"
                            android:layout_height="@dimen/icon_size_base"
                            android:layout_gravity="center"
                            android:layout_marginRight="@dimen/margin_10"
                            android:gravity="end"
                            android:padding="@dimen/margin_2"
                            android:src="@drawable/icon_other_bank" />

                        <TextView
                            android:id="@+id/tvNickName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="@string/raihan_mahamud_emon"
                            android:textColor="@color/confirm_value_text_color"
                            android:textSize="@dimen/textsize_base"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvAccountno"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_weight="1"
                            android:gravity="center_horizontal|center_vertical|left"
                            android:text="@string/raihan_mahamud_emon"
                            android:textColor="@color/text_label_color"
                            android:textSize="@dimen/textsize_base" />

                        <TextView
                            android:id="@+id/tvType"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:text="@string/raihan_mahamud_emon"
                            android:textColor="@color/text_label_color"
                            android:textSize="@dimen/textsize_base" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvAcTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal|center_vertical|left"
                        android:text="@string/raihan_mahamud_emon"
                        android:textColor="@color/text_label_color"
                        android:textSize="@dimen/textsize_base" />

                    <TextView
                        android:id="@+id/tvBankName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal|center_vertical|left"
                        android:text="@string/raihan_mahamud_emon"
                        android:textColor="@color/text_label_color"
                        android:textSize="@dimen/textsize_base" />
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>