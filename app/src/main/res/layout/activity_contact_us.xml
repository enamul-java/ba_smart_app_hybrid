<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".presentation.home.local.screen.ContactUsActivity">

    <LinearLayout
        android:id="@+id/toolbar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">

        <include layout="@layout/header_layout_toolbar" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_15"
                android:layout_marginTop="@dimen/margin_10"
                android:layout_marginRight="@dimen/margin_15"
                android:layout_marginBottom="@dimen/margin_15"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/login_card_corner_radius_base"
                app:cardElevation="@dimen/login_card_elevation_base">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_address"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:drawableLeft="@drawable/ic_location"
                        android:drawablePadding="@dimen/margin_10"
                        android:paddingLeft="@dimen/input_padding_letf_base"
                        android:paddingTop="@dimen/input_padding_top_base"
                        android:paddingRight="@dimen/input_padding_right_base"
                        android:paddingBottom="@dimen/input_padding_bottom_base"
                        android:text="@string/address"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textsize_base"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/margin_30"
                        android:layout_marginBottom="@dimen/margin_10"
                        android:paddingLeft="@dimen/input_padding_letf_base"
                        android:paddingRight="@dimen/input_padding_right_base"
                        android:text="@string/lb_channel_banking_address_text"
                        android:textColor="@color/textView_login_edittext_color"
                        android:textSize="@dimen/textsize_base" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/margin_30"
                        android:layout_marginBottom="@dimen/margin_10"
                        android:paddingLeft="@dimen/input_padding_letf_base"
                        android:paddingRight="@dimen/input_padding_right_base"
                        android:text="@string/lb_corporate_address_text"
                        android:textColor="@color/textView_login_edittext_color"
                        android:textSize="@dimen/textsize_base" />

                    <TextView
                        android:id="@+id/tv_email_label"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:drawableLeft="@drawable/ic_mail_"
                        android:drawablePadding="@dimen/margin_10"
                        android:paddingLeft="@dimen/input_padding_letf_base"
                        android:paddingTop="@dimen/input_padding_top_base"
                        android:paddingRight="@dimen/input_padding_right_base"
                        android:paddingBottom="@dimen/input_padding_bottom_base"
                        android:text="@string/email"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textsize_base"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_email"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/margin_30"
                        android:layout_marginBottom="@dimen/margin_10"
                        android:paddingLeft="@dimen/input_padding_letf_base"
                        android:paddingRight="@dimen/input_padding_right_base"
                        android:text="@string/lb_contact_email"
                        android:textColor="@color/textView_login_edittext_color"
                        android:textSize="@dimen/textsize_base" />

                    <TextView
                        android:id="@+id/tv_customer_care"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:drawableLeft="@drawable/ic_phone"
                        android:drawablePadding="@dimen/margin_10"
                        android:paddingLeft="@dimen/input_padding_letf_base"
                        android:paddingTop="@dimen/input_padding_top_base"
                        android:paddingRight="@dimen/input_padding_right_base"
                        android:paddingBottom="@dimen/input_padding_bottom_base"
                        android:text="@string/customer_care"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textsize_base"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_contact_16205"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/margin_30"
                        android:layout_marginBottom="@dimen/margin_10"
                        android:paddingLeft="@dimen/input_padding_letf_base"
                        android:paddingRight="@dimen/input_padding_right_base"
                        android:text="@string/lb_helpline"
                        android:textColor="@color/textView_login_edittext_color"
                        android:textSize="@dimen/textsize_base" />

                    <TextView
                        android:id="@+id/tv_contact_oversease"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/margin_30"
                        android:layout_marginBottom="@dimen/margin_10"
                        android:paddingLeft="@dimen/input_padding_letf_base"
                        android:paddingTop="@dimen/input_padding_top_base"
                        android:paddingRight="@dimen/input_padding_right_base"
                        android:paddingBottom="@dimen/input_padding_bottom_base"
                        android:text="@string/lb_helpline_overseas"
                        android:textColor="@color/textView_login_edittext_color"
                        android:textSize="@dimen/textsize_base" />

                    <TextView
                        android:id="@+id/tv_follow_on"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:drawableLeft="@drawable/icon_follow"
                        android:drawablePadding="@dimen/margin_10"
                        android:paddingLeft="@dimen/input_padding_letf_base"
                        android:paddingTop="@dimen/input_padding_top_base"
                        android:paddingRight="@dimen/input_padding_right_base"
                        android:paddingBottom="@dimen/input_padding_bottom_base"
                        android:text="@string/follow_on"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textsize_base"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/setting_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/toolbar_layout"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/margin_5"
                        android:layout_marginBottom="@dimen/margin_5"
                        android:background="@color/white"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal"
                        android:padding="@dimen/padding_2">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/iv_facebook"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/qr_icon_size"
                                android:layout_marginLeft="@dimen/margin_10"
                                android:layout_marginRight="@dimen/margin_10"
                                android:layout_weight="1"
                                android:src="@drawable/icon_facebook" />

                            <TextView
                                android:id="@+id/tv_facebook"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="@string/facebook"
                                android:textColor="@color/black"
                                android:textSize="@dimen/textsize_label" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/iv_instagram"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/qr_icon_size"
                                android:layout_marginLeft="@dimen/margin_10"
                                android:layout_marginRight="@dimen/margin_10"
                                android:layout_weight="1"
                                android:src="@drawable/icon_insta" />

                            <TextView
                                android:id="@+id/tv_instagram"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="@string/instagram"
                                android:textColor="@color/black"
                                android:textSize="@dimen/textsize_label" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/iv_linkedin"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/qr_icon_size"
                                android:layout_marginLeft="@dimen/margin_10"
                                android:layout_marginRight="@dimen/margin_10"
                                android:layout_weight="1"
                                android:src="@drawable/icon_linkedin" />

                            <TextView
                                android:id="@+id/tv_linkedin"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="@string/linked_in"
                                android:textColor="@color/black"
                                android:textSize="@dimen/textsize_label" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/iv_youtube"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/qr_icon_size"
                                android:layout_marginLeft="@dimen/margin_10"
                                android:layout_marginRight="@dimen/margin_10"
                                android:layout_weight="1"
                                android:src="@drawable/icon_youtube" />

                            <TextView
                                android:id="@+id/tv_youtube"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:singleLine="true"
                                android:text="@string/youtube"
                                android:textColor="@color/black"
                                android:textSize="@dimen/textsize_label" />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

</LinearLayout>