<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:fillViewport="true"
android:fitsSystemWindows="true"
android:orientation="vertical"
tools:context=".presentation.welcome.card.screen.CreditCardNewStatementActivity">

<LinearLayout
    android:id="@+id/toolbar_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <include layout="@layout/header_layout_toolbar" />
</LinearLayout>

<LinearLayout
    android:id="@+id/layout_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/toolbar_layout"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        tools:ignore="UselessParent">

        <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/lyt_card_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/lyt_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/text_input_layout_left_size"
                            android:layout_marginTop="@dimen/text_input_layout_top_size"
                            android:layout_marginEnd="@dimen/text_input_layout_right_size"
                            android:layout_marginBottom="@dimen/text_input_layout_bottom_size">

                            <ImageView
                                android:id="@+id/iv_search_card"
                                android:layout_width="@dimen/input_field_height_size"
                                android:layout_height="@dimen/input_field_height_size"
                                android:layout_gravity="end"
                                android:layout_marginTop="@dimen/margin_5"
                                android:layout_marginEnd="@dimen/margin_5"
                                android:background="@drawable/beneficiary_round_border_transparent"
                                android:padding="@dimen/beneficiary_image_padding_base"
                                android:src="@drawable/icon_search"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/lyt_card_no"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:hint="@string/card_no"
                                android:padding="@dimen/padding_5"
                                tools:layout_editor_absoluteX="4dp"
                                tools:layout_editor_absoluteY="0dp">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/edt_card_no"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/input_field_height_size"
                                    android:layout_marginEnd="@dimen/beneficiary_icon_margin_right_base"
                                    android:clickable="false"
                                    android:focusable="false"
                                    android:focusableInTouchMode="false"
                                    android:inputType="none"
                                    android:padding="@dimen/padding_5"
                                    android:singleLine="true"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/textsize_base" />

                            </com.google.android.material.textfield.TextInputLayout>

                        </androidx.constraintlayout.widget.ConstraintLayout>


                    </LinearLayout>


                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:layout_marginTop="@dimen/margin_5"
                    android:layout_marginRight="@dimen/margin_5"
                    android:weightSum="3">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_today"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/prepost_paid_height_base"
                        android:layout_margin="@dimen/margin_5"
                        android:layout_weight="1"
                        android:background="@drawable/btn_round_border_statement_today"
                        android:text="@string/today"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textsize_base" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_last_week"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/prepost_paid_height_base"
                        android:layout_margin="@dimen/margin_5"
                        android:layout_weight="1"
                        android:background="@drawable/btn_round_border_statement_last_week"
                        android:text="@string/last_week"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textsize_base" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_last_month"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/prepost_paid_height_base"
                        android:layout_margin="@dimen/margin_5"
                        android:layout_weight="1"
                        android:background="@drawable/btn_round_border_transparent_unselect"
                        android:text="@string/last_month"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textsize_base" />
                </LinearLayout>


                <TextView
                    android:id="@+id/tv_or"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="@dimen/padding_5"
                    android:text="@string/search_with_custom_date_range"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize_base"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">


                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/from_date_input"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/margin_5"
                        android:layout_marginRight="@dimen/margin_5"
                        android:layout_weight="1"
                        android:hint="@string/from_date"
                        android:padding="@dimen/padding_5">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_from_date"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:clickable="false"
                            android:drawableEnd="@drawable/ic_date"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:inputType="none"
                            android:longClickable="false"
                            android:paddingStart="@dimen/padding_10"
                            android:paddingTop="@dimen/padding_5"
                            android:paddingEnd="@dimen/padding_10"
                            android:paddingBottom="@dimen/padding_5"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textSize="@dimen/textsize_base"
                            app:endIconDrawable="@drawable/ic_date" />

                    </com.google.android.material.textfield.TextInputLayout>


                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/to_date_input"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/margin_5"
                        android:layout_marginRight="@dimen/margin_5"
                        android:layout_weight="1"
                        android:hint="@string/to_date"
                        android:padding="@dimen/padding_5">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_to_date"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:clickable="false"
                            android:drawableEnd="@drawable/ic_date"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:inputType="none"
                            android:longClickable="false"
                            android:paddingStart="@dimen/padding_10"
                            android:paddingTop="@dimen/padding_5"
                            android:paddingEnd="@dimen/padding_10"
                            android:paddingBottom="@dimen/padding_5"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textSize="@dimen/textsize_base" />

                    </com.google.android.material.textfield.TextInputLayout>


                </LinearLayout>


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <include layout="@layout/btn_search_layout" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_transaction_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_5"
                android:layout_marginTop="@dimen/margin_5"
                android:layout_marginRight="@dimen/margin_5"
                android:orientation="vertical"
                android:visibility="gone">

                <include layout="@layout/layout_transaction_details" />


            </LinearLayout>


        </LinearLayout>


    </ScrollView>

</LinearLayout>
</RelativeLayout>